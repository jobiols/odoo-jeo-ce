<odoo>
<!-- res.config.settings inherit form view -->
<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">L10N AR WITHHOLDING FIX</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@id='invoicing_settings']" position="after">
            <h2>Configuracion de retenciones</h2>
            <div class="row mt16 o_settings_container" id="withholding_settings">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Firma en certificados de retenci√≥n</span>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                        <div class="content-group mt16">
                            <label for="withholding_signer_name" class="o_light_label"/>
                            <field name="withholding_signer_name" widget="signature" options="{'size': [200,'']}"/>
                        </div>
                        <div class="content-group mt16">
                            <label for="withholding_singner_sign" class="o_light_label"/>
                            <field name="withholding_singner_sign"/>
                        </div>
                        <div class="text-muted">
                            La firma y aclaracion que se agreguen aqui sera incluida en los Certificados de Retenciones.
                        </div>
                        <div>
                            <button name="clean_signature" class="oe_link" type="object" string="Vaciar contenido"/>
                        </div>
                    </div>
